{
  "name": "playwright-test-framework",
  "version": "1.0.0",
  "description": "Extensible Playwright test framework with API and UI wrappers",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "postinstall": "npm run setup:playwright",
    "setup": "npm run setup:playwright",
    "setup:playwright": "node scripts/check-playwright.js || ./scripts/setup-playwright.sh",
    "setup:force": "./scripts/setup-playwright.sh",
    "verify": "./verify-setup.sh",
    "test": "npm run setup:check && playwright test",
    "test:headed": "npm run setup:check && playwright test --headed",
    "test:debug": "npm run setup:check && playwright test --debug",
    "test:ui": "npm run setup:check && playwright test --ui",
    "test:api": "npm run setup:check && playwright test src/tests/api",
    "test:integration": "npm run setup:check && playwright test src/tests/integration",
    "test:retry": "npm run setup:check && RETRY_COUNT=3 playwright test src/tests/integration/retry-example.test.ts",
    "test:retry-ui": "npm run setup:check && RETRY_COUNT=3 playwright test src/tests/ui/login-with-retry.ui.test.ts",
    "test:no-retry": "npm run setup:check && RETRY_COUNT=0 playwright test",
    "test:max-retry": "npm run setup:check && RETRY_COUNT=5 playwright test",
    "setup:check": "node scripts/check-playwright.js",
    "test:report": "playwright show-report",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write src/**/*.ts",
    "clean": "rm -rf dist",
    "prepare": "npm run build",
    "docker:build": "./build.sh",
    "docker:test": "./docker-run.sh test",
    "docker:test:api": "./docker-run.sh test-api",
    "docker:test:ui": "./docker-run.sh test-ui --ui",
    "docker:test:integration": "./docker-run.sh test-integration",
    "docker:shell": "./docker-run.sh shell",
    "docker:clean": "./docker-run.sh clean",
    "docker:report": "./docker-run.sh report",
    "setup:all": "./build.sh --local",
    "setup:docker": "./build.sh",
    "setup:local": "./build.sh --local --skip-docker"
  },
  "keywords": [
    "playwright",
    "testing",
    "automation",
    "typescript",
    "framework"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.53.2",
    "@types/node": "^24.0.8",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "prettier": "^3.0.0",
    "typescript": "^5.8.3"
  },
  "files": [
    "dist",
    "src",
    "playwright.config.ts",
    "README.md"
  ],
  "engines": {
    "node": ">=16.0.0"
  }
}
